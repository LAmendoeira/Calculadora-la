        <form method="post">
                <table style="border-spacing:5px;border-collapse:collapse; border:1px solid">
                    <tr>
                        <td colspan="5">
                            <input type="text" class="form-control" style="height:30px; width:215px; text-align:right;" name="visor" readonly="readonly" value="@ViewBag.Visor" />
                        </td>
                    </tr>
                    <tr>
                        <td><input class="btn" style="width:40px;height:40px;" type="submit" value="7" name="bt" /></td>
                        <td><input class="btn" style="width:40px;height:40px;" type="submit" value="8" name="bt" /></td>
                        <td><input class="btn" style="width:40px;height:40px;" type="submit" value="9" name="bt" /></td>
                        <td><input class="btn" style="width:40px;height:40px;" type="submit" value=":" name="bt" /></td>
                        <td><input class="btn" style="width:40px;height:40px;" type="submit" value="+/-" name="bt" /></td>
                    </tr>
                    <tr>
                        <td><input type="submit" value="4" name="bt" /></td>
                        <td><input type="submit" value="5" name="bt" /></td>
                        <td><input type="submit" value="6" name="bt" /></td>
                        <td><input type="submit" value="x" name="bt" /></td>
                        <td><input type="submit" value="C" name="bt" /></td>
                    </tr>
                    <tr>
                        <td><input type="submit" value="1" name="bt" /></td>
                        <td><input type="submit" value="2" name="bt" /></td>
                        <td><input type="submit" value="3" name="bt" /></td>
                        <td><input type="submit" value="-" name="bt" /></td>
                        <td rowspan="2"><input type="submit" value="=" name="bt" /></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input type="submit" value="0" name="bt" /></td>
                        <td><input type="submit" value="," name="bt" /></td>
                        <td><input type="submit" value="+" name="bt" /></td>
                    </tr>
                </table>
        </form>


    </div>
